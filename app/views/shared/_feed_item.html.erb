<li>
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <%= link_to feed_item.user.name, feed_item.user %><br>
    <%= feed_item.date %> , <%= feed_item.weather %><br>
    <%= feed_item.content %><br>
    ( <%= feed_item.lat %>, <%= feed_item.lng %> ) -  <%= time_ago_in_words(feed_item.created_at) %> ago
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.content %>
  <% end %>
</li>